{
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/api/:path*",
      "destination": "/backend/:path*",
      "statusCode": 200
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ]
}
