{
  "outputDirectory": "dist", 
  "functions": {
    "backend/server.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend"
    },
    {
      "source": "/(.*\\..*)",
      "destination": "/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ]
}
