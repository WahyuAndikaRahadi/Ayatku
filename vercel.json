{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ]
}
